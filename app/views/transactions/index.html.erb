<%= render "menu" %>
<center><h1>All Transactions</h1></center>

  <% flash.each do |message_type, message| %>
    <div> <strong><%= message %></strong></div>
  <% end %>

<strong>Group Net Amount:</strong> $<%= total @transactions %>
&nbsp
<strong>Group Total Expenses:</strong> $<%= total @transactions.expense %>
&nbsp
<strong>Group Total Income:</strong> $<%= total @transactions.income %>
<br>
<strong>Largest Expense:</strong> <%= user_with_largest_expense @transactions.expense %>, $<%= largest_expense @transactions.expense %>
&nbsp
<strong>Largest Income:</strong> <%= user_with_largest_income @transactions.income %>, $<%= largest_income @transactions.income%>
<br>
<br>
<table class="table table-hover">
  <thead>
    <th>Users Name</th>
    <th>Transaction</th>
    <th>Amount</th>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td> <%= transaction.user.name %> </td>
        <td> <%= link_to transaction.name,transaction%> </td>
        <td> $<%= transaction.amount %> </td> 
      </tr>
    <% end %>
  </tbody>
</table>

</center>
