<%= form_with model: [ @transactions, @transactions.notes.build ] do |form| %>

  <% @transactions.errors.full_messages_for(:body).each do |message| %>
    <div><em><%= message %></em></div>
  <% end %>

  <p>
    <%= form.label :note %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>