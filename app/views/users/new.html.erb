
  <center><h1>Create A New Account</h1></center>
  <% @user.errors.full_messages_for(:name).each do |message| %>
    <div><strong><%= message %></strong></div>
  <% end %>
  <% @user.errors.full_messages_for(:email).each do |message| %>
    <div><strong><%= message %></strong></div>
  <% end %>
  <% @user.errors.full_messages_for(:password).each do |message| %>
    <div><strong><%= message %></strong></div>
  <% end %>
  <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
    <div><strong><%= message %></strong></div>
  <% end %>

  <div>
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :email %>
      <%= f.email_field :email %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <%= f.label :password_confirmation, "Re-Enter Password" %>
      <%= f.password_field :password_confirmation %>
      
      <%= f.submit "Create my account"%>
    <% end %>
    </div>
  </div>